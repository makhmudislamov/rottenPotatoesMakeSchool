<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/movies/{{review.movieId}}/reviews/{{review._id}}?_method=PUT" method="post">
      {{> reviews-form}}
      <input type="hidden" name="movieId" value="{{review.movieId}}">
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Save Review</button>
      </div>
    </form>
    <form class="" action="/movies/{{review.movieId}}" method="get">
      <div class="form-group">
        <button class="btn btn-primary" type="cancel" name="button">Cancel</button>
      </div>
    </form>
  </div>
</div>